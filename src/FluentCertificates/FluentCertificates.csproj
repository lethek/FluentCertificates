<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net5.0;netstandard2.1</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Authors>Michael Monsour</Authors>
    <Copyright>Copyright © Michael Monsour 2022</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Very simple library using the Immutable Fluent Builder pattern for creating, finding and exporting certificates. Makes it easy to generate your own certificate chains, or just stand-alone self-signed certs.</Description>
    <PackageTags>certificate, fluent, x509, pfx, pem, cert, crt, CA</PackageTags>
    <PackageProjectUrl>https://github.com/lethek/FluentCertificates</PackageProjectUrl>
    <RepositoryUrl>https://github.com/lethek/FluentCertificates</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\FluentCertificates.Builder\FluentCertificates.Builder.csproj" />
    <ProjectReference Include="..\FluentCertificates.Finder\FluentCertificates.Finder.csproj" />
  </ItemGroup>

</Project>
